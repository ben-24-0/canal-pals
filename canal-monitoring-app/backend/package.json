{
  "name": "canal-monitoring-backend",
  "version": "1.0.0",
  "description": "Canal monitoring system backend API for ESP32 data collection",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required'",
    "test": "node test/api-test.js",
    "simulate": "node scripts/simulate-esp32.js",
    "simulate:canoli": "node scripts/simulate-esp32.js canoli-canal 3",
    "simulate:puthussery": "node scripts/simulate-esp32.js puthussery-kalady-canal 3",
    "init-db": "node scripts/init-database.js",
    "setup": "npm install && npm run init-db"
  },
  "keywords": [
    "canal",
    "monitoring",
    "esp32",
    "iot",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.6.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^7.1.3",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "axios": "^1.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
